{
    "global": {
    },
    "profiles": [
        {
            "name": "Jon's super-ultra-meta layout",
            "selected": true,
            "complex_modifications": {
                "parameters": {
                    "basic.to_if_alone_timeout_milliseconds": 250,
                    "basic.to_if_held_down_threshold_milliseconds": 250
                },

                "rules": [
                    {
                        "description": "Caps Lock remap to <ESC> if held down",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": {
                                    "key_code": "caps_lock"
                                },
                                "to_if_alone": [
                                    {
                                        "key_code": "caps_lock"
                                    }
                                ],
                                "to_if_held_down": [
                                    {
                                        "key_code": "escape"
                                    }
                                 ]
                            }
                        ]
                    },

                    {
                        "description": "If 'caps_lock pressed' variable is set to 1, send <CTRL>-a instead",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": {
                                        "optional": [
                                            "any"
                                        ]
                                    }
                                },
                                "to": [
                                    {
                                        "key_code": "left_control"
                                    },
                                    {
                                        "key_code": "a"
                                    }
                                ],
                                "conditions": [
                                    {
                                        "type": "variable_if",
                                        "name": "caps_lock pressed",
                                        "value": 1
                                    }
                                ]
                            }
                        ]
                    },

                    {
                        "description": "Set variable to track if Caps Lock is pressed twice",
                        "manipulators": [
                            {
                            "type": "basic",
                            "from": {
                                "key_code": "caps_lock",
                                "modifiers": {
                                    "optional": [
                                        "any"
                                    ]
                                }
                            },
                            "to": [
                                {
                                    "set_variable": {
                                        "name": "caps_lock pressed",
                                        "value": 1
                                    }
                                },
                                {
                                    "key_code": "caps_lock"
                                }
                            ],
                            "to_delayed_action": {
                                "to_if_invoked": [
                                    {
                                        "set_variable": {
                                            "name": "caps_lock pressed",
                                            "value": 0
                                        }
                                    }
                                ],
                                "to_if_canceled": [
                                        {
                                            "set_variable": {
                                                "name": "caps_lock pressed",
                                                "value": 0
                                            }
                                        }
                                ]
                            }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
